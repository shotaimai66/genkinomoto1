<div class="container">
  <div>
    <h1>お知らせ一覧</h1>
  </div>
  <table class="table table-bordered">
    <thead class="thead-light">
      <tr>
        <th>記事タイトル</th>
        <th>記事内容</th>
        <th>投稿日</th>
      </tr>
    </thead>
    <% @notifications.each do |content| %>
    <tbody>
      <tr class="a">
        <td style="width:20%">
          <%= link_to truncate(content.title, length: 15), notification_path(content.id) %>
        </td>
        <td style="width:65%">
          <%= content.body %>
        </td>
        <td style="width:15%">
          <%= content.created_at.strftime("%Y年%m月%d日") %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= paginate(@notifications) %>
</div>
